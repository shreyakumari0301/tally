# Budget Analyzer Configuration
# ==============================
# Copy this file to settings.yaml and customize for your data.

# Time period for analysis
year: 2025
title: "Spending Analysis"

# Currency display format (default: "${amount}")
# Use {amount} as placeholder for the formatted number
# currency_format: "${amount}"      # US Dollar (prefix)
# currency_format: "{amount} zł"    # Polish Złoty (suffix)
# currency_format: "€{amount}"      # Euro (prefix)
# currency_format: "£{amount}"      # British Pound (prefix)

# Data sources - list of transaction files to process
# Paths are relative to the parent of the config directory
data_sources:
  - name: AMEX
    file: data/amex-2025.csv
    type: amex
  - name: BOA
    file: data/boa-checking.txt
    type: boa
  # European format example:
  # - name: Deutsche Bank
  #   file: data/deutsche.csv
  #   format: "{date:%d.%m.%Y},{description},{amount}"
  #   decimal_separator: ","  # 1.234,56 format

  # Multi-column description example:
  # Some banks split transaction info across columns (e.g., type + recipient).
  # Use custom captures to combine them:
  # - name: European Bank
  #   file: data/bank.csv
  #   format: "{date:%d.%m.%Y},{_},{txn_type},{vendor},{_},{amount}"
  #   columns:
  #     description: "{vendor} ({txn_type})"  # Combines columns into description

# Supplemental data sources (optional)
# Provide item-level data (e.g., Amazon order history) to improve categorization
# for vendors where transaction descriptions aren't detailed enough
# supplemental_sources:
#   - name: Amazon Orders
#     file: data/amazon-orders.csv
#     vendor: AMAZON  # Merchant name pattern to match (regex)
#     vendor_pattern: AMAZON.*  # Optional: more specific pattern
#     match_fields: [date, amount]  # Fields to match on (default: [date, amount])
#     # Optional: custom format (default assumes Amazon order history format)
#     # format: "{date:%m/%d/%Y},{order_id},{title},{category},{amount}"
#     # columns:
#     #   description: "{title}"

# Location settings
home_state: WA  # Used for badge coloring (green for home state)

# Travel detection settings (optional)
# home_locations:
#   - WA  # Your home location(s) - international transactions outside these are auto-travel
#   - OR  # Can specify multiple locations

# travel_override:
#   - GB  # Locations that should NOT be considered travel (e.g., if you live abroad)
#   - CA  # Useful for excluding specific countries/states from auto-travel detection

# disable_auto_travel: false  # If true, disables automatic travel detection entirely
                              # Only merchant rules with Travel category will mark as travel

# Output settings
output_dir: output
html_filename: spending_summary.html
